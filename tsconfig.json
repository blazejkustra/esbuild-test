{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "removeComments": true,
    "target": "es6",
    "lib": ["es2016","DOM"],
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": ".build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
}
